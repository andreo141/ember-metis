{{#if this.hasShort}}
  <p>
    {{#if this.hasShort}}
      {{this.label}}
    {{else}}
      <p class="au-u-word-break-all">{{@uri}}</p>
    {{/if}}
  </p>
  <ul class="au-c-list-horizontal au-u-margin-top-tiny">
    {{#if this.localBasePath}}
      <li class="au-c-list-horizontal__item">
        <LinkTo @route="fallback" @model={{this.localBasePath}} class="au-c-link">
          <AuIcon @icon="link-external" @alignment="left" @ariaHidden="true" />Volg link
        </LinkTo>
      </li>
    {{else}}
      <li class="au-c-list-horizontal__item">
        <a href={{@uri}} class="au-c-link">
          <AuIcon @icon="link-external" @alignment="left" @ariaHidden="true" />Volg link (extern)
        </a>
      </li>
    {{/if}}
    <li class="au-c-list-horizontal__item">
      <AuButton @skin="tertiary" {{on "click" (fn (mut this.showShort) (not this.showShort))}} aria-role="button">
        {{#if this.showShort}}
          <AuIcon @icon="link" @alignment="left" @ariaHidden="true" />
          Toon URI
        {{else}}
          <AuIcon @icon="draft" @alignment="left" @ariaHidden="true" />
          Toon label
        {{/if}}
      </AuButton>
    </li>
  </ul>
  {{#if this.description}}
    <p>{{this.description}}</p>
  {{/if}}
{{else}}
  {{#if this.localBasePath}}
    <LinkTo
      @route="fallback"
      @model={{this.localBasePath}}
      class="au-c-link au-u-word-break-all">
      {{@uri}}
    </LinkTo>
  {{else}}
    <ul class="au-c-list-horizontal">
      <li class="au-c-list-horizontal__item">
        <a href={{@uri}} class="au-c-link au-u-word-break-all">{{@uri}}</a>
      </li>
    </ul>
  {{/if}}
{{/if}}
